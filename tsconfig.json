{
  "strict": true,
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@vue/*": [
        "./vue/*"
      ],
      "@js/*": [
        "./js/*"
      ],
      "@jsP/*": [
        "./platform/chrome/js/*"
      ],
      "@scss/*": [
        "./scss/*"
      ],
      "@scssP/*": [
        "./platform/chrome/scss/*"
      ]
    },
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2017",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
